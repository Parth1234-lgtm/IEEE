{
  "manifest_version": 3,
  "name": "Attention-Adaptive UI (Mock Demo)",
  "version": "1.0.0",
  "description": "Demo: attention signals → mock adaptation plan → live UI changes.",
  "permissions": ["storage", "activeTab", "scripting"],
  "host_permissions": ["http://127.0.0.1:8000/*"],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Attention-Adaptive UI"
  }
}
